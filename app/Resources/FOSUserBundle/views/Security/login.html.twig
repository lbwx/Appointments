{#{% trans_default_domain 'FOSUserBundle' %}#}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" id="app-form-login" method="post" class="form-horizontal">
	<div class="form-group">
		<label for="username" class="control-label col-sm-2">{{'form.login.username.label'|trans}}</label>
		<div class="col-sm-10">
			<input type="text" id="username" name="_username" value="{{last_username}}" required="required" placeholder="{{'form.login.username.placeholder'|trans}}" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="password" class="control-label col-sm-2">{{'form.login.password.label'|trans}}</label>
		<div class="col-sm-10">
			<input type="password" id="password" name="_password" required="required" placeholder="{{'form.login.password.placeholder'|trans}}" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<div class="checkbox">
				<label><input type="checkbox" id="remember_me" name="_remember_me" value="on">&nbsp;{{'form.login.remember_me.label'|trans}}</label>
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<input type="hidden" name="_csrf_token" value="{{csrf_token}}">
			<button type="submit" id="_submit" name="_submit" class="btn btn-primary pull-right">{{'form.login.submit'|trans}}</button>
		</div>
	</div>
</form>