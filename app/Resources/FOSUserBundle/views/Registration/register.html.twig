{#{% trans_default_domain 'FOSUserBundle' %}#}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-horizontal fos_user_registration_register'}}) }}
	<div class="form-group">
		{{form_label(form.username, null, {'label_attr': {'class': 'control-label col-sm-4'}})}}
		<div class="col-sm-8">
			{{form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'form.registration.username.placeholder'|trans}})}}
		</div>
		<div class="col-sm-offset-2 col-sm-8">{{form_errors(form.username)}}</div>
	</div>
	<div class="form-group">
		{{form_label(form.email, null, {'label_attr': {'class': 'control-label col-sm-4'}})}}
		<div class="col-sm-8">
			{{form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'form.registration.email.placeholder'|trans}})}}
		</div>
		<div class="col-sm-offset-2 col-sm-8">{{form_errors(form.email)}}</div>
	</div>
	<div class="form-group">
		{{form_label(form.plainPassword.first, null, {'label_attr': {'class': 'control-label col-sm-4'}})}}
		<div class="col-sm-8">
			{{form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'form.registration.password1.placeholder'|trans}})}}
		</div>
		<div class="col-sm-offset-2 col-sm-8">{{form_errors(form.plainPassword.first)}}</div>
	</div>
	<div class="form-group">
		{{form_label(form.plainPassword.second, null, {'label_attr': {'class': 'control-label col-sm-4'}})}}
		<div class="col-sm-8">
			{{form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'form.registration.password2.placeholder'|trans}})}}
		</div>
		<div class="col-sm-offset-2 col-sm-8">{{form_errors(form.plainPassword.second)}}</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-1 col-sm-10">
			{{form_rest(form)}}
			<button type="submit" id="_submit" name="_submit" class="btn btn-primary pull-right">{{'form.registration.submit'|trans}}</button>
		</div>
	</div>
{{form_end(form)}}
