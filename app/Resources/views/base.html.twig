<!DOCTYPE html>
<html>
    <head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="author" content="Ľuboš Babocký">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		<link rel="stylesheet" type="text/css" href="{{asset('fullcalendar-3.0.1/fullcalendar.css')}}">
		<link rel="stylesheet" type="text/css" href="{{asset('css/bootstrap.min.css')}}">
		<link rel="stylesheet" type="text/css" href="{{asset('css/main.css')}}">
		<script src="{{asset('fullcalendar-3.0.1/lib/moment.min.js')}}"></script>
		<script src="{{asset('js/jquery-3.0.0.min.js')}}"></script>
		<script src="{{asset('fullcalendar-3.0.1/fullcalendar.min.js')}}"></script>
		<script src="{{asset('fullcalendar-3.0.1/locale/de-at.js')}}"></script>
		<script src="{{asset('js/main.js')}}"></script>
		<script src="{{asset('js/bootstrap.min.js')}}"></script>
        <title>{% block title %}Appointments manager{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#app-navbar-collapse" aria-expanded="false">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="#">Brand</a>
				</div>
				<div class="collapse navbar-collapse" id="app-navbar-collapse">
					<ul class="nav navbar-nav navbar-right">
						{%if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
							<li><a href="javascript:modalForms.login();">{{'page.button.login'|trans}}</a></li>
							<li><a href="javascript:modalForms.register();">{{'page.button.register'|trans}}</a></li>
						{%else%}
							<li><a>{{'messages.page.logged_as'|trans({'%username%': app.user.username})}}</a></li>
							<li><a href="{{path('fos_user_security_logout')}}">{{'page.button.logout'|trans}}</a></li>
						{%endif%}
					</ul>
				</div> 
			</div>
		</nav>

        {% block body %}{% endblock %}

		<div class="modal fade" role="dialog" id="app-modal-window">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal">&times;</button>
						<h4 class="modal-title">&nbsp;</h4>
					</div>
					<div class="modal-body">
						
					</div>
				</div>
			</div>
		</div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
